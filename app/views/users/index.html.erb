<h1> This is the user index page </h1>
 
<table>
    <tr>
    	<th>Name</th>
	    <th>Email</th>
    </tr>
 
<% @users.each do |user| %>
    <tr>
	    <td><%= user.username %></td>
	    <td><%= user.email %></td>
	    <td><%= link_to 'Show', user %></td>
	    <td><%= link_to 'Edit', edit_user_path(user) %></td>
	    <td><%= link_to "Delete", user, :confirm => "Are you sure you want to delete this user?", :method => :delete %></td>
  	</tr>
<% end %>

</table>

<br />

<%= link_to 'New User', new_user_path %>
